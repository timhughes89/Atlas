<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Atlas.DayNight" parent="Atlas.Base"/>
    
    <style name="Atlas.Base" parent="Base.MaterialThemeBuilder">
        <!--Material color attributes for theme -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryVariant">@color/color_primary_variant</item>
        <item name="colorSecondary">@color/color_secondary</item>
        <item name="colorSecondaryVariant">@color/color_secondary_variant</item>
        ​
        <item name="android:colorBackground">@color/color_background</item>
        <item name="colorSurface">@color/color_surface</item>
        <item name="colorError">@color/color_error</item>
        ​
        <item name="colorOnPrimary">@color/color_on_primary</item>
        <item name="colorOnSecondary">@color/color_on_secondary</item>
        <item name="colorOnBackground">@color/color_on_background</item>
        <item name="colorOnSurface">@color/color_on_surface</item>
        <item name="colorOnError">@color/color_on_error</item>
        ​
        <!--Material type attributes-->
        <!-- android:textColor overrides all font colours, android:textColorPrimary overrides large fonts, android:textColorSecondary overrides medium & small fonts -->
        <item name="android:textColor">@color/color_on_surface</item>
        <item name="fontFamily">@font/titillium_regular</item>
        <!--		<item name="android:textColorPrimary">@color/color_on_surface</item>-->
        <!--		<item name="android:textColorSecondary">@color/color_on_surface</item>-->

        <item name="textAppearanceHeadline1">@style/TextAppearance.Atlas.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.Atlas.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.Atlas.Headline3</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.Atlas.Headline4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.Atlas.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.Atlas.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.Atlas.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.Atlas.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.Atlas.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.Atlas.Body2</item>
        <item name="textAppearanceButton">@style/TextAppearance.Atlas.Button</item>
        <item name="textAppearanceCaption">@style/TextAppearance.Atlas.Caption</item>
        <item name="textAppearanceOverline">@style/TextAppearance.Atlas.Overline</item>

        ​
        <!--Material shape attributes-->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.Rated.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.Rated.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.Rated.LargeComponent</item>
        ​
        <!--Component styles-->
        <item name="materialAlertDialogTheme">@style/ThemeOverlay.MaterialComponents.Dialog.Alert</item>
        <item name="bottomSheetDialogTheme">@style/ThemeOverlay.Rated.BottomSheetDialog</item>

        <item name="toolbarStyle">@style/ThemeOverlay.Rated.Toolbar</item>
        <item name="bottomNavigationStyle">@style/ThemeOverlay.Rated.BottomNavigationView</item>
        <item name="materialCardViewStyle">@style/ThemeOverlay.Rated.MaterialCardView</item>
        <item name="textInputStyle">@style/ThemeOverlay.Rated.TextInputLayout</item>
        <item name="buttonStyle">@style/ThemeOverlay.Rated.Button</item>
    </style>

    <style name="Base.MaterialThemeBuilder" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor">?colorSurface</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:navigationBarColor">?android:colorBackground</item>
        <item name="android:windowLightNavigationBar" tools:ignore="NewApi">true</item>
        <item name="android:navigationBarDividerColor" tools:ignore="NewApi">?colorControlHighlight</item>
        ​
        <!--Remap legacy AppCompat attributes to MaterialComponent attributes-->
        <item name="colorPrimaryDark">?colorPrimaryVariant</item>
        <item name="colorAccent">?colorSecondary</item>
    </style>

</resources>