<resources xmlns:tools="http://schemas.android.com/tools">


    <!-- // Material Component Themes // -->

    <!-- Bottom Sheets -->
    <style name="ThemeOverlay.Rated.BottomSheetDialog" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@style/Animation.Rated.BottomSheet.Modal</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="bottomSheetStyle">@style/Widget.Rated.BottomSheet.Modal</item>
        <item name="android:navigationBarColor">?colorSurface</item>
        <item name="android:navigationBarDividerColor" tools:ignore="NewApi">@android:color/transparent</item>
    </style>

    <style name="Widget.Rated.BottomSheet.Modal" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="shapeAppearanceOverlay">?shapeAppearanceLargeComponent</item>
    </style>

    <!-- Bottom Navigation -->
    <style name="ThemeOverlay.Rated.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="labelVisibilityMode">labeled</item>
        <item name="itemTextAppearanceActive">@style/TextAppearance.Atlas.BottomNavigationView.Active</item>
        <item name="itemTextAppearanceInactive">@style/TextAppearance.Atlas.BottomNavigationView.Inactive</item>
        <item name="itemRippleColor">@color/color_primary</item>
    </style>

    <!-- Card View -->
    <style name="ThemeOverlay.Rated.MaterialCardView" parent="Widget.MaterialComponents.CardView">
        <item name="strokeColor">@color/color_white_10</item>
        <item name="strokeWidth">2dp</item>
        <item name="android:strokeColor">@color/color_white_10</item>
        <item name="cardBackgroundColor">@color/color_background</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">0dp</item>
    </style>

    <!-- Text Input Layout -->
    <style name="ThemeOverlay.Rated.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/color_primary</item> <!-- Overrides default active color resource -->
        <item name="strokeColor">@color/color_tertiary</item>
        <item name="boxStrokeWidth">2dp</item> <!-- active strokeWidth -->
        <item name="hintTextAppearance">@style/TextAppearance.Atlas.Hint</item>
        <item name="errorTextAppearance">@style/TextAppearance.Atlas.Error</item>
        <item name="helperTextTextAppearance">@style/TextAppearance.Atlas.Helper</item>
        <item name="android:textAppearance">@style/TextAppearance.Atlas.Body1</item>
        <item name="android:textColorHint">@color/color_white_60</item> <!-- Hint color when inactive -->
        <item name="hintTextColor">@color/color_primary</item> <!-- Hint text color when active -->
        <item name="errorEnabled">true</item>
        <item name="hintEnabled">true</item>
        <item name="helperTextEnabled">true</item>
        <item name="hintAnimationEnabled">true</item>
    </style>

    <!-- AppBar Layout -->
    <style name="ThemeOverlay.Rated.AppBarLayout" parent="Widget.Design.AppBarLayout">
        <item name="android:background">@color/color_background</item>
    </style>

    <!-- Toolbar -->
    <style name="ThemeOverlay.Rated.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:theme">@android:style/ThemeOverlay.Material.Dark.ActionBar</item>
        <item name="colorControlNormal">@color/color_background</item>
        <item name="titleTextAppearance">@style/TextAppearance.Atlas.Toolbar.Title</item>
        <item name="android:itemTextAppearance">@style/TextAppearance.Atlas.Toolbar.Title</item>
    </style>

    <!-- Buttons -->
    <style name="ThemeOverlay.Rated.Button" parent="Widget.MaterialComponents.Button">
        <item name="enforceMaterialTheme">true</item>
        <item name="enforceTextAppearance">true</item>
        <item name="android:background">@drawable/abc_btn_default_mtrl_shape</item>
        <item name="android:textAppearance">?attr/textAppearanceButton</item>
        <item name="android:textColor">@color/mtrl_btn_text_color_selector</item>
        <item name="android:stateListAnimator" tools:ignore="NewApi">@animator/mtrl_btn_state_list_anim</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="ThemeOverlay.Rated.Button.OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/color_on_surface</item>
        <item name="android:textColor">@color/color_on_surface</item>
        <item name="strokeWidth">2dp</item>
    </style>

    <style name="AppTheme.Chip.Action" parent="Widget.MaterialComponents.Chip.Action"></style>

</resources>
